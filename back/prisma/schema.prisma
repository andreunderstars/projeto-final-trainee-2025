generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id Int @id @default(autoincrement())
  title String
  artist String
  gender String
  releaseYear Int
  imageUrl String?

songs Song[]
avaliacoes Avaliacao[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("albums")
}

model Song {
  id Int @id @default(autoincrement())
  title String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  albumId     Int
  album      Album    @relation(fields: [albumId], references: [id]) 

  @@map("songs")
}

model Avaliacao {
  id Int @id @default(autoincrement())
  title String
  date String
score Int
comment String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  albumId     Int
  album       Album    @relation(fields: [albumId], references: [id])

  @@map("avaliacoes")
}